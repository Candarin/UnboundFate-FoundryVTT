<form class="uf-dialog">
  {{!-- Attack Details --}}
  <h3>Incoming Attack</h3>
  
  <div class="form-group">
    <label>Attack Type</label>
    <input type="text" name="attackType" value="{{attackType}}" disabled id="attackType"/>
  </div>
 
  <div class="form-group">
    <label>Attack Successes</label>
    <input type="number" name="attackSuccesses" value="{{attackSuccesses}}" min="0" disabled id="attackSuccesses"/>
  </div>

  <div class="form-group">
    <label>Damage</label>
    <span title="{{damageStringLong}}">{{damageString}}</span>
  </div>


  {{!-- Ability Details --}}
  <hr>  
  <div class="form-group">
    <label>Ability 1</label>
    <div class="flexrow">
      <select class="flex2" name="ability1Key" id="ability1Key">
        {{#each ability1Options}}
          <option value="{{this.key}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
        {{/each}}
      </select>
      <input class="flex0 stat-value-box" id="ability1Value" value="{{ability1Value}}" disabled />      
    </div>
  </div>

  <div class="form-group">
    <label>Ability 2</label>
      <div class="flexrow">
        <select class="flex2" name="ability2Key" id="ability2Key">    
          {{#each ability2Options}}
            <option value="{{this.key}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
          {{/each}}
        </select>      
        <input class="flex0 stat-value-box" id="ability2Value" value="{{ability2Value}}" disabled />
      </div>
  </div>

  {{!-- Parry Details --}}
  <hr>
  <div class="form-group">
    <label>Equipped Weapon</label>
    <div class="flexrow">
      <select class="flex1" name="weaponId">
        <option value="">None</option>
        {{#each actorWeaponOptions}}
          <option value="{{this.key}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
        {{/each}}
      </select>
      <input class="flex0 stat-value-box" id="actorWeaponParry" name="actorWeaponParry" value="{{actorWeaponParry}}" disabled />
    </div> 
  </div>  

  <div class="form-group">
    <label>Linked Skill</label>  
    <div class="flexrow">
      <input class="flex1 actorWeaponSkill" id="actorWeaponSkill" value="{{actorWeaponSkillLabel}}" disabled />  
      <input class="flex0 stat-value-box" id="actorWeaponSkillRating" value="{{actorWeaponSkillRating}}" disabled />
    </div>
  </div>

  <div class="form-group">
    <label title="Weapon parry rating, up to a max of ranks in the matching skill">Parry</label>
    <div class="flexrow">
      <span></span>
      <input class="flex0 stat-value-box" id="actorParry" type="number" name="actorParry" value="{{actorParry}}" disabled/>
    </div>    
  </div>
    
  {{!-- Shield Details --}}
  <hr>
  <div class="form-group">
    <label>Shield</label>
    <div class="flexrow">
    {{#if actorShieldReadied}}
      <label class="flex2" id="actorShieldRating">{{actorShieldReadied.name}}</label>
      <input class="flex0 stat-value-box" id="actorShieldRatingValue" value="{{actorShieldReadied.system.shieldRating}}" disabled />
    {{else}}
      <span>No shield readied</span>
    {{/if}}
    </div>
  </div>

  {{!-- Armour Details --}}
  <hr>  
  <div class="form-group">
    <label>Equipped Armour</label>
    <div class="flexrow">
      <span>
        {{#if actorArmourListString}}
          {{actorArmourListString}}
        {{else}}
          None
        {{/if}}
      </span>
      <input class="flex0 stat-value-box" type="number" name="actorArmourDeflect" value="{{actorArmourDeflect}}" disabled id="actorArmourDeflect"/>
    </div>
  </div>

  {{!-- Modifer --}}
  <hr>
  <div class="form-group">
    <label>Modifier</label>
    <input type="number" name="modifier" value="{{modifier}}"/>
  </div>
   
  <h3>Total</h3>
  <div class="form-group">
    <label>Modifiers</label>
    <span id="modifiersString">{{modifiersString}}</span>
  </div>

  <div class="form-group">
    <label>Total Pool</label>
    <input type="number" name="totalPool" id="totalPool" value="{{totalPool}}" disabled/>
  </div>
 
  <hr>
  <div class="form-group">
    <label>Target Number (Attack Successes):</label>
    <input type="number" name="targetNumber" id="targetNumber" value="{{targetNumber}}" min="0"/>
  </div>

</form>
