{{! filepath: templates/item/item-weapon-sheet.hbs }}
<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
      <div class="resources grid grid-2col">
        <label class="resource-label">PDF Reference</label>
        <input type="text" name="item.pdfReference" value="{{item.pdfReference}}" data-dtype="Text" />
        <label class="resource-label">Weight</label>
        <input type="number" name="item.weight" value="{{item.weight}}" data-dtype="Number" step="any" />
        <label class="resource-label">Cost</label>
        <input type="number" name="item.cost" value="{{item.cost}}" data-dtype="Number" step="any" />
        <label class="resource-label">Weapon Type</label>
        <input type="text" name="item.weaponType" value="{{item.weaponType}}" data-dtype="Text" />
        <label class="resource-label">Parry</label>
        <input type="number" name="item.parry" value="{{item.parry}}" data-dtype="Number" />
      </div>
      <div class="resources grid grid-2col">
        <label class="resource-label">Damage (1H)</label>
        <input type="text" name="item.damage1H" value="{{item.damage1H}}" data-dtype="Text" />
        <label class="resource-label">Damage (2H)</label>
        <input type="text" name="item.damage2H" value="{{item.damage2H}}" data-dtype="Text" />
        <label class="resource-label">Skill</label>
        <input type="text" name="item.skill" value="{{item.skill}}" data-dtype="Text" />
        <label class="resource-label">Skill Specialisation</label>
        <input type="text" name="item.skillSpec" value="{{item.skillSpec}}" data-dtype="Text" />
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor enrichedDescription target="system.description" engine="prosemirror" button=true editable=editable}}
    </div>
    {{!-- Effects Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      {{> "systems/unboundfate/templates/item/parts/item-effects.hbs"}}
    </div>
  </section>
</form>
