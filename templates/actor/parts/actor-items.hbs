<ol class='items-list'>
  {{!-- Weapons --}}
  <li class='item flexrow items-header group-header'>
    <div class='item-name'>Weapons</div>
    <div class='item-formula'>Damage</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type='Weapon'}}' data-type='weapon'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='weapon'}}
      </a>
    </div>
  </li>
  {{#each weapons as |item|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-formula item-prop'>{{item.system.damage1H}}{{#if item.system.damage2H}} / {{item.system.damage2H}}{{/if}}</div>
      <div class='item-controls'>
        <input type="checkbox" name="system.isEquipped" {{#if item.system.isEquipped}}checked{{/if}} title="Equipped" />
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='Item'}}'><i class='fas fa-edit'></i></a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Item'}}'><i class='fas fa-trash'></i></a>
      </div>
    </li>
  {{/each}}

  {{!-- Armour --}}
  <li class='item flexrow items-header group-header'>
    <div class='item-name'>Armour</div>
    <div class='item-formula'>Armour Rating</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type='Armour'}}' data-type='armour'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='armour'}}
      </a>
    </div>
  </li>
  {{#each armour as |item|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-formula item-prop'>{{item.system.armourRating}}</div>
      <div class='item-controls'>
        <input type="checkbox" name="system.isEquipped" {{#if item.system.isEquipped}}checked{{/if}} title="Equipped" />
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='Item'}}'><i class='fas fa-edit'></i></a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Item'}}'><i class='fas fa-trash'></i></a>
      </div>
    </li>
  {{/each}}

  {{!-- Shields --}}
  <li class='item flexrow items-header group-header'>
    <div class='item-name'>Shields</div>
    <div class='item-formula'>Rating</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type='Shield'}}' data-type='shield'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='shield'}}
      </a>
    </div>
  </li>
  {{#each shields as |item|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-formula item-prop'>{{item.system.shieldRating}}</div>
      <div class='item-controls'>
        <input type="checkbox" name="system.isEquipped" {{#if item.system.isEquipped}}checked{{/if}} title="Equipped" />
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='Item'}}'><i class='fas fa-edit'></i></a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='Item'}}'><i class='fas fa-trash'></i></a>
      </div>
    </li>
  {{/each}}

  {{!-- Gear --}}
