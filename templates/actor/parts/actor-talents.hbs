<ol class='items-list'>
  <li class='item flexrow items-header group-header'>
    <div class='item-name'>Talents</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type='talent'}}' data-type='talent'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='talent'}}
      </a>
    </div>
  </li>
  {{#each talents as |item|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type='talent'}}'><i class='fas fa-edit'></i></a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='talent'}}'><i class='fas fa-trash'></i></a>
      </div>
    </li>
  {{/each}}

  <li class='item flexrow items-header group-header'>
    <div class='item-name'>Flaws</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type='flaw'}}' data-type='flaw'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='flaw'}}
      </a>
    </div>
  </li>
  {{#each flaws as |item|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-controls'>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type='flaw'}}'><i class='fas fa-edit'></i></a>
        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='flaw'}}'><i class='fas fa-trash'></i></a>
      </div>
    </li>
  {{/each}}
</ol>